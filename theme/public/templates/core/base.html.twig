<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" {{ site.language_attributes }}>
  <!--<![endif]-->
  <head>
    <meta charset="{{ site.charset }}"/>

    <title>
      {% if wp_title %}
        {{ wp_title ~ ' | ' ~ site.name }}
      {% else %}
        {{ site.name }}
      {% endif %}
    </title>

    {% include "core/metadata.html.twig" %}

    {{function('wp_head')}}

    {% block head %}{% endblock %}
  </head>

  <body class="{{ body_class|join(' ') }} is-loading">

    {% block loader %}
      <div id="loader">
        <div class="loop">
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>
    {% endblock %}

    {% block header %}
      {% include "core/nav.html.twig" %}
    {% endblock %}

    <main class="min-h-screen pt-24 desktop-sm:pt-32">
      {% block main %}{% endblock %}
    </main>

    {% block footer %}
      {% include "core/footer.html.twig" %}
    {% endblock %}

    {{ function('wp_footer') }}

  </body>
</html>