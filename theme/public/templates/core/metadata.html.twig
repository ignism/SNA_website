<style>
.is-loading {
  overflow: hidden;
}

#loader {
  position: fixed;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
	align-items: center;
	flex-wrap: nowrap;
  background: white;
  opacity: 1;
  overflow: hidden;
  z-index: 50;
}

.loop {
	width: 50px;
	height: 50px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	flex-wrap: nowrap;
}

.loop	div {
  display: block;
  width: 10px;
  height: 10px;
  opacity: 0;
  border-radius: 50%;
  transform: translateY(25px);
  animation: loop 1.2s ease infinite;	
}

.loop div:nth-child(1) {
  animation-delay: 200ms;
}

.loop div:nth-child(2) {
  animation-delay: 400ms;
}

.loop div:nth-child(3) {
  animation-delay: 600ms;
}

@keyframes loop {
	0% {
		transform: translateY(20px);
	}
	50% {
		transform: translateY(0);
		opacity: 1;
		background: #ff5a50;
	}
	100% {
		transform: translateY(-10px);
	}
}

</style>