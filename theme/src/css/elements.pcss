* {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body,
html {
  @apply text-grey bg-white;
  font-family: 'Aeonik', sans-serif;
  font-style: normal;
  font-weight: 400;
}

a,
a:active,
a:focus,
a:visited {
  @apply text-black no-underline;
  transition: 200ms ease-out;
}

a.text-red,
a.text-red:active,
a.text-red:focus,
a.text-red:visited {
  @apply text-red;
}

a.text-white,
a.text-white:active,
a.text-white:focus,
a.text-white:visited {
  @apply text-white;
}


quote {
  &:before {
    content: '\201C';
  } 
  
  &:after {
    content: '\201D';
  }
}